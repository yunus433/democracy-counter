doctype html
html(lang='tr')
  head
    meta(name='viewport' content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
    meta(charset='UTF-8')
    if title
      title DemocracyCounter | #{title}
    else
      title DemocracyCounter
    link(href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,600,700,800' rel='stylesheet')
    if includes
      if includes.external
        if includes.external.css
          each file_name in includes.external.css
            if file_name == 'page'
              link(rel='stylesheet' href=`${URL}/css/${page}.css`)
            else
              link(rel='stylesheet' href=`${URL}/css/general/${file_name}.css`)
        if includes.external.js
          each file_name in includes.external.js
            if file_name == 'page'
              script(src=`${URL}/js/${page}.js`)
            else if file_name == 'web3'
              script(src='https://cdn.jsdelivr.net/npm/web3@latest/dist/web3.min.js')
            else
              script(src=`${URL}/js/functions/${file_name}.js`)
    body
      block content
